<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.administrator.jzlib.jzlib.Fragment.MyInfoFragment"
    android:orientation="vertical">

    <ScrollView
        style="@style/carddemo_default_container_padding"
        android:id="@+id/card_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Empty view-->


            <it.gmariotti.cardslib.library.view.CardViewNative
                android:id="@+id/carddemo_stockcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card:card_layout_resourceID="@layout/native_cardwithlist_layout"
                style="@style/card_external"/>

            <!-- Empty view-->


            <com.dd.CircularProgressButton
                android:id="@+id/zhuxiao_btn"
                android:layout_width="fill_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_height="50dp"
                android:textColor="#ffffff"
                android:textSize="18sp"
                app:cpb_textComplete="注销成功"
                app:cpb_textError="注销失败"
                app:cpb_textIdle="注销"
                android:layout_alignParentBottom="true"
                app:cpb_cornerRadius="48dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp"
                app:cpb_colorProgress="#00ffffff"
                />


        </LinearLayout>
    </ScrollView>


</LinearLayout>
