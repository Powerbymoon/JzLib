<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bg"
   >
    <include layout="@layout/find_title" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#20000000"
        />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
      >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_pic"
        android:background="@drawable/pic"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/imageView_pic"
            android:background="#20000000"
            android:layout_marginTop="12dp"
            android:id="@+id/view_0"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="25"
            android:textSize="40dp"
            android:textStyle="bold"
            android:id="@+id/tv_date"
            android:textColor="#18b5ea"
            android:layout_alignTop="@+id/view_0"
            android:layout_marginLeft="14dp"
           />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="2014/9"
            android:id="@+id/date_small"
            android:layout_alignBottom="@+id/tv_date"
            android:layout_toRightOf="@+id/tv_date"
            android:layout_toEndOf="@+id/tv_date" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..."
            android:id="@+id/zuozhe"
            android:textStyle="italic"
            android:layout_below="@+id/view_0"
            android:layout_alignRight="@+id/relativeLayout"
            android:layout_alignEnd="@+id/relativeLayout" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/tv_date"
            android:background="#20000000"
            android:id="@+id/view_1"
            />
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="14dp"
    android:layout_marginLeft="14dp"
    android:layout_marginRight="12dp"
    android:layout_below="@+id/view_1"
    android:id="@+id/relativeLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不管全世界所有人怎么说，我都认为自己的感受才是正确的。无论别人怎么看，我绝不打乱自己的节奏。喜欢的事自然可以坚持,不喜欢怎么也长久不了。——村上春树"
            android:id="@+id/tv_article"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="17dp"
            android:scrollbars = "vertical"
            />

</RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/relativeLayout"
            android:background="#20000000"
            android:id="@+id/view_3"
            />
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:id="@+id/mb_love"
            android:background="@drawable/like_0"
            android:layout_below="@+id/relativeLayout"
            android:layout_marginTop="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"></ImageButton>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/mb_love"
            android:background="#20000000"
            android:id="@+id/view_4"
            />
            />


    </RelativeLayout>
</LinearLayout>
