<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bg">
    <include layout="@layout/find_title" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#20000000"
        />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
      >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/pic0"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="25"
            android:textSize="40dp"
            android:textStyle="bold"
            android:id="@+id/tv_date"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/imageView"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/imageView"
            android:layout_alignStart="@+id/imageView"
            android:textColor="#90CAF9"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="2015/9"
            android:id="@+id/textView2"
            android:layout_alignBottom="@+id/tv_date"
            android:layout_toRightOf="@+id/tv_date"
            android:layout_toEndOf="@+id/tv_date" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Moon 摄"
            android:id="@+id/textView"
            android:textStyle="italic"
            android:layout_alignTop="@+id/tv_date"
            android:layout_alignRight="@+id/imageView"
            android:layout_alignEnd="@+id/imageView" />
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="20dp"
    android:layout_below="@+id/tv_date">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不管全世界所有人怎么说，我都认为自己的感受才是正确的。无论别人怎么看，我绝不打乱自己的节奏。喜欢的事自然可以坚持,不喜欢怎么也长久不了。——村上春树"
            android:id="@+id/tv_article"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="12dp"
            android:textSize="16dp"
            android:background="@drawable/textview_style"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"

        android:background="@drawable/ic_favorite_outline_blue_grey_300_24dp"
        android:layout_alignRight="@+id/tv_article"
        android:layout_alignEnd="@+id/tv_article"
        android:layout_below="@+id/tv_article"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"/>

</RelativeLayout>
    </RelativeLayout>
</LinearLayout>
