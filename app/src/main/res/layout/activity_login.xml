<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cn.hotdoor.kxt.Activities.LoginActivity"
    android:clickable="false">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_rl_head">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#10000000"
        android:layout_below="@+id/login_rl_head"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/login_v_line"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_v_line"
        android:orientation="horizontal"
        android:id="@+id/login_ll_l1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:weightSum="1"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_person_blue_300_36dp"
            />
        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入学号"
                android:textColorHint="#40000000"
                android:background="@null"
                android:id="@+id/login_et_phone"
                android:singleLine="true"
                android:inputType="phone"
                />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#10000000"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/login_ll_l1"
        android:id="@+id/login_v_v2"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_v_v2"
        android:orientation="horizontal"
        android:id="@+id/lo_login_l2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_lock_green_300_36dp"
            />
        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="请输入密码（默认为学号）"
                android:textColorHint="#40000000"
                android:background="@null"
                android:id="@+id/login_et_code"
                android:singleLine="true"
                />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#10000000"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/lo_login_l2"
        android:id="@+id/login_v_v3"
        />

   <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/login_v_v3"
       android:orientation="horizontal"
       android:id="@+id/lo_login_l3"
       android:layout_marginTop="10dp"
       android:layout_marginBottom="10dp"
       android:gravity="center_vertical">

       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@drawable/ic_format_list_numbered_red_200_36dp"
           />
       <com.wrapp.floatlabelededittext.FloatLabeledEditText
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           >
           <EditText
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:hint="请输入验证码"
               android:textColorHint="#40000000"
               android:background="@null"
               android:id="@+id/login_et_captcha"
               android:singleLine="true"
               />

       </com.wrapp.floatlabelededittext.FloatLabeledEditText>

       <ImageView
           android:layout_width="40dp"
           android:layout_height="36dp"
           android:id="@+id/captche_pic"
           android:background="@drawable/wait"
           android:layout_weight="0.33" />

   </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#10000000"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/lo_login_l3"
        android:id="@+id/login_v_v4"
        />
    <com.gc.materialdesign.views.CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#1E88E5"
        materialdesign:check="true"
        android:layout_alignTop="@+id/login_v_v4"
        android:layout_toLeftOf="@+id/textView3"
        android:layout_toStartOf="@+id/textView3" />

    <com.dd.CircularProgressButton
        android:id="@+id/login_btn_login"
        android:layout_width="fill_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:cpb_textComplete="登陆成功"
        app:cpb_textError="登陆失败"
        app:cpb_textIdle="登陆"
        android:layout_alignParentBottom="true"
        app:cpb_cornerRadius="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        app:cpb_colorProgress="#00ffffff"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="记住账号密码"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/checkBox"
        android:layout_alignRight="@+id/login_v_v4"
        android:layout_alignEnd="@+id/login_v_v4"
        android:layout_marginBottom="14dp"/>


</RelativeLayout>
