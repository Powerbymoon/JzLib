<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_rl_top"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_centerVertical="true">



    <TextView
        android:id="@+id/message_tv_Callno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:padding="5dp"
        android:text="xuliehao"
        android:textSize="16dp"
     android:layout_below="@+id/message_tv_bookname"

       />

    <TextView
        android:id="@+id/message_tv_Anthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/message_tv_Callno"

        android:text="kejie"
        android:padding="5dp"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:layout_marginTop="2dp"
        android:id="@+id/message_tv_bookname"
      android:padding="4dp"

     />



    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/messgae_iv_star"
        android:background="@drawable/ic_shoucan_selector"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
     />


</RelativeLayout>




